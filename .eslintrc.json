{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks"
    ],
    "rules": {
      // Aponta problema como erro
      "react-hooks/rules-of-hooks":"error",
      // Problema na dependencia tratado como alerta
      "react-hooks/exhaustive-deps":"warn",
      // Como estamos ultilizando o Typescript, não precisamos desta função
      "react/prop-types":"off",
      // Tira a obrigação de importar o react, import React from 'react';
      "react/react-in-jsx-scope":"off",
      //Quando esta configuração esta ligada, precisamos informar o tipo do retorno
      "@typescript-eslint/explicit-module-boundary-types":"off"
    },
    "settings": {
      "react":{
        "version": "detect"
      }
    }
}
